{
	"version": "2.0.0",
	"tasks": [
		{
            "type": "typescript",
			"label": "Compile TypeScript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
		},
		{
            "type": "shell",
            "label": "clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
	]
}